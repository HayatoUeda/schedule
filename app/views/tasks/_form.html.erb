<%= form_with(model: @task) do |form| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "つのエラー") %>が発生しています。</h2>
      <ul>
        <% task.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<table>
  <tr>
    <th><%= form.label :"タイトル" %></th>
    <td><%= form.text_field :title %></td>
  </tr>

  <tr>
    <th><%= form.label :開始日 %></th>
    <td><%= form.date_field :startdate %></td>
  </tr>

  <tr>
    <th><%= form.label :終了日 %></th>
    <td><%= form.date_field :enddate %></td>
  </tr>

  <tr>
    <th><%= form.label :終日 %></th>
    <td>
      <%= form.check_box :allday %>
      <%= label_tag :allday, "終日の場合はチェックを入れてください"%>
    </td>
  </tr>

  <tr>  
    <th><%= form.label :メモ %></th>
    <td><%= form.text_area :memo ,size:"40x8"%></td>
  </tr>
<table>
<% end %>